    "Conditions": {
        "UseAurora": {
            "Fn::Equals": [
                {
                    "Ref": "DBEngineType"
                },
                "Amazon Aurora"
            ]
        }
    },
    "Rules": {
        "AuroraDBInstanceTypeRule": {
            "RuleCondition": {
                "Fn::Equals": [
                    {
                        "Ref": "DBEngineType"
                    },
                    "Amazon Aurora"
                ]
            },
            "Assertions": [
                {
                    "Assert": {
                        "Fn::Contains": [
                            [
                                "db.r3.large",
                                "db.r3.xlarge",
                                "db.r3.2xlarge",
                                "db.r3.4xlarge",
                                "db.r3.8xlarge",
                                "db.t2.small",
                                "db.t2.medium"
                            ],
                            {
                                "Ref": "DBInstanceClass"
                            }
                        ]
                    },
                    "AssertDescription": "Amazon Aurora does not currently support this DB instance class."
                }
            ]
        },
        "AuroraSupportedRegionsRule": {
            "RuleCondition": {
                "Fn::Equals": [
                    {
                        "Ref": "DBEngineType"
